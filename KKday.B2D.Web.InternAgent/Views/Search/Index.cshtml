                    </div>
                    <div class="filter-box">
                        <h4>@Localizer["Price_Range"] ({{currency}})</h4>
                        <div>
                            <input type="text" id="js-range-slider" name="range" data-min="{{stats.price.min}}"
                                   data-max="{{stats.price.max}}" data-from="{{stats.price.min}}"
                                   data-to="{{stats.price.max}}" @@change="rangeChanged" />
                        </div>
