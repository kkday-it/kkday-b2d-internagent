                <div class="filter-group">
                    <div class="filter-box" is-show-filter="A01-001">
                        <h4 class="collapsable collapsed">
                            @Localizer["Destination"]<i class="fa fa-caret-up pull-right"></i>
                        </h4>
                        <ul class="filter-list collapse">
                            @*<div class="chip-city-group">
                    <template v-for="city in cities">
                        <span class="chip chip-city">
                            <a class="" v-html="city.name"></a>
                        </span>
                    </template>
                </div>*@
                        </ul>
                    </div>
                    <div class="checkbox-filter-box">
                        <h4>@Localizer["All_Categories"]</h4>
                        <template v-for="tags in facets.tag">
                            <div>
                                <div :value="tags.id" class="drop-title">
                                    <h5 v-html="tags.name">
                                        <div class="pull-right"><i class="fa fa-lg fa-angle-down"></i></div>
                                        <div class="clearfix"></div>
                                    </h5>
                                </div>
                                <ul class="checkbox-dropdown-list" style="display:none;">
                                    <li class="checkbox"><i class="fa fa-square-o fa-lg"></i> <span class="checkbox-title">@Localizer["All"]</span></li>
                                    <template v-for="sub_item in tags.sub_tags">
                                        <li class="checkbox" v-if="sub_item.count > 0">
                                            <i class="fa fa-square-o fa-lg"></i> <span :data-val="`cat|${sub_item.id}`" class="checkbox-title" v-html="`${sub_item.name} (${sub_item.count})`"></span>
                                        </li>
                                    </template>
                                </ul>
